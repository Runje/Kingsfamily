<resources>

    <!-- Base application theme. -->
    <style name="FamilyTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/NormalText</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:imageButtonStyle">@style/Icon</item>
        <item name="android:alertDialogStyle">@style/Dialog</item>

    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="NormalText" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/normalText</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LinearLayoutNormalText" parent="NormalText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Heading" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">@color/normalText</item>
    </style>

    <style name="Icon" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/normalText</item>
    </style>

    <style name="EditCosts" parent="Widget.AppCompat.EditText">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/normalText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/decimal_costs_width</item>
        <item name="android:inputType">numberSigned|numberDecimal</item>
    </style>

</resources>
